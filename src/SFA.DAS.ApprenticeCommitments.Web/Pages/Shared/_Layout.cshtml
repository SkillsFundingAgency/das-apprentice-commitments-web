<!DOCTYPE html>
<html lang="en" class="govuk-template ">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta property="og:image" content="/assets/images/govuk-opengraph-image.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="/assets/images/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="/assets/images/govuk-mask-icon.svg" color="#0b0c0c" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/govuk-apple-touch-icon-180x180.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/assets/images/govuk-apple-touch-icon-167x167.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/assets/images/govuk-apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" href="/assets/images/govuk-apple-touch-icon.png" />

    <!--[if !IE 8]><!-->
    <link href="/css/main.css" rel="stylesheet" />
    <!--<![endif]-->
    <!--[if IE 8]>
        <link href="/govuk-frontend/all-ie8.css" rel="stylesheet" />
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="/html5-shiv/html5shiv.js"></script>
    <![endif]-->

    <link href="~/css/site.css" media="screen" rel="stylesheet" no-cdn />

    <title>@ViewData["Title"] - Commitment Statement</title>
</head>
<body class="govuk-template__body">
    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <partial name="_Header" />

    @RenderSection("AfterHeader", required: false)

    <div class="govuk-width-container">

        @RenderSection("BreadCrumbs", required: false)

        @if (Model is DAS.ApprenticeCommitments.Web.Services.IHasBackLink backlink)
        {
            <a href="@backlink.Backlink" title="Apprenticeship overview page" class="govuk-back-link">Back</a>
        }

        <main class="govuk-main-wrapper app-main-class" id="main-content" role="main">
            @RenderBody()
        </main>
    </div>

    <script src="/libs/govuk-frontend/all.js"></script>
    <script src="/libs/jquery/jquery.min.js"></script>
    <script src="/js/das-all.js"></script>
    <script src="/js/app.min.js"></script>
    <script src="~/js/step-by-step-nav.js" no-cdn></script>
    <script>
        window.GOVUKFrontend.initAll();
        window.DASFrontend.initAll();
    </script>
    <script src="~/js/site.js" asp-append-version="true" no-cdn></script>
    @RenderSection("Scripts", required: false)


    <partial name="_Footer" />

</body>
</html>
