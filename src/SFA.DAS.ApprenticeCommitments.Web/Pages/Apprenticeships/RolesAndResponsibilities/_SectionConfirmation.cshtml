@model SFA.DAS.ApprenticeCommitments.Web.Pages.Apprenticeships.RolesAndResponsibilities.SectionConfirmationPageModel
@{
    bool IsInvalid(string propertyName)
    {
        return ViewData.ModelState[propertyName]?.ValidationState ==
               Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid;
    }

    string FormGroupValidationClass(string propertyName)
    {
        return IsInvalid(propertyName) ? "govuk-form-group--error" : "";
    }
}
<form id="form-section-confirmation-Id" method="post">

    <input type="hidden" asp-for="RevisionId" value="@Model.RevisionId" />
    
    <div class="govuk-form-group">
        <div class="@FormGroupValidationClass("SectionConfirmed")">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                    <span class="govuk-fieldset__heading">
                        Confirmation
                    </span>
                </legend>
                <div class="govuk-checkboxes govuk-checkboxes--small" data-module="govuk-checkboxes">
                    <span asp-validation-for="SectionConfirmed" class="govuk-error-message"></span>
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" asp-for="SectionConfirmed">
                        <label class="govuk-label govuk-checkboxes__label" for="SectionConfirmed">
                            I confirm I have read the roles and responsibilities.
                        </label>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <button class="govuk-button" data-module="govuk-button" id="roles-responsibilities-confirm">Continue</button>
</form>