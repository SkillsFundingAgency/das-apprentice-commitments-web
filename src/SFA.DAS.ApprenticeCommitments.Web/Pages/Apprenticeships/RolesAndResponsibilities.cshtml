@page "/apprenticeships/{apprenticeshipId}/rolesandresponsibilities"
@model SFA.DAS.ApprenticeCommitments.Web.Pages.Apprenticeships.RolesAndResponsibilitiesModel
@{
    ViewData["Title"] = "Roles and Responsibilities";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <partial name="ValidationSummary" />

        <h1 class="govuk-heading-xl">Roles and responsibilities</h1>

        <div asp-show="@Model.RolesAndResponsibilitiesConfirmed.HasValue" class="app-notification-banner app-notification-banner--with-icon app-notification-banner--success">
            <span class="app-notification-banner__icon das-text--success-icon"></span>
            You have read through roles and responsibilities
        </div>

        <p class="govuk-body">Read through the roles and responsibilities of:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>you</li>
            <li>your employer</li>
            <li>your training provider</li>
        </ul>

    </div>
</div>

<div class="govuk-tabs" data-module="govuk-tabs">
    <ul class="govuk-tabs__list">
        <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
            <a class="govuk-tabs__tab" href="#tab_you">Your responsibilities</a>
        </li>
        <li class="govuk-tabs__list-item">
            <a class="govuk-tabs__tab" href="#tab_youremployer">Your employer's responsibilities</a>
        </li>
        <li class="govuk-tabs__list-item">
            <a class="govuk-tabs__tab" href="#tab_yourprovider">Your training provider's responsibilities</a>
        </li>
    </ul>

    <div class="govuk-tabs__panel" id="tab_you">
        <h4 class="govuk-heading-s">I have:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>read and signed my apprenticeship agreement</li>
            <li>discussed my training plan with my employer and training provider</li>
            <li>told my employer and training provider about any learning needs or health issues I have</li>
            <li>been told when my apprenticeship training starts and ends</li>
            <li>understood the roles of my employer and training provider during my apprenticeship</li>
            <li>understood that at least 20% of my normal working hours will be off-the-job training</li>
            <li>understood that I will be assessed by an independent end-point assessor at the end of my apprenticeship training</li>
        </ul>
        <h4 class="govuk-heading-s">I will:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>take part in regular progress reviews with my employer and training provider usually every 12 weeks</li>
            <li>attend all my off-the-job training and provide evidence of my recorded hours where needed</li>
            <li>complete all of my learning activities, assignments and exams</li>
            <li>tell my employer in advance when I cannot attend work</li>
            <li>tell my training provider in advance when I cannot attend my off-the-job training</li>
            <li>agree with my employer and training provider when I am ready to complete my end-point assessment</li>
            <li>raise any concerns or complaints through my employer and training provider</li>
        </ul>
    </div>

    <div class="govuk-tabs__panel" id="tab_youremployer">
        <h4 class="govuk-heading-s">They have:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>signed and provided you with a copy of your apprenticeship agreement that you agreed together</li>
            <li>contributed to a training plan with you and your training provider</li>
            <li>committed to working with you and your training provider to support your learning needs</li>
        </ul>
        <h4 class="govuk-heading-s">They will:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>enable you to complete your off-the-job training during your normal working hours, which will be
                <strong>at least 20% of your normal working hours</strong></li>
            <li>take part in regular progress reviews with you and your training provider usually every 12 weeks</li>
            <li>work with you and your training provider to resolve any concerns or complaints</li>
        </ul>
    </div>

    <div class="govuk-tabs__panel" id="tab_yourprovider">
        <h4 class="govuk-heading-s">They have:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>a copy of the apprenticeship agreement signed by you and your employer</li>
            <li>discussed your training plan with you and your employer and ensured it accounts for prior learning,
                English and maths needs and additional learning support</li>
            <li>told you and your employer your apprenticeship training start and end dates</li>
            <li>explained how off-the-job training will be delivered</li>
            <li>told you and your employer if they will use sub-contracted training providers to deliver any of your training</li>
            <li>explained that you will be assessed by an independent end-point assessor</li>
        </ul>
        <h4 class="govuk-heading-s">They will:</h4>
        <ul class="govuk-list govuk-list--bullet">
            <li>manage the quality and delivery of your off-the-job training</li>
            <li>be responsible for collecting all the evidence to show your off-the-job training</li>
            <li>make sure that you and your employer know how to raise concerns or complaints about your apprenticeship training</li>
        </ul>
    </div>
</div>

<form asp-hide="@Model.RolesAndResponsibilitiesConfirmed.HasValue" id="employer-form-hide" method="post">
    <input type="hidden" asp-for="RolesAndResponsibilitiesConfirmed" value="true" />
    <input type="hidden" asp-for="RevisionId" value="@Model.RevisionId" />
    <button class="govuk-button" data-module="govuk-button" id="roles-responsibilities-confirm">Continue</button>
</form>

<form asp-show="@Model.RolesAndResponsibilitiesConfirmed.HasValue" action="@Model.Backlink">
    <button class="govuk-button">Continue</button>
</form>