@page
@model SFA.DAS.ApprenticeCommitments.Web.Pages.CheckYourDetails
@{
    ViewData["Title"] = "Check your details";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    There seems to be a problem, we cannot find your apprenticeship.
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <p class="govuk-body">
                    Check your name and date of birth. If these are incorrect, please
                    <a asp-external-section="ConfirmMyApprenticeship" asp-external-page="Account" asp-always-show=true>update your details</a>.
                </p>
            </div>
        </div>

        <h1 class="govuk-heading-l">Check your details</h1>

        <table class="govuk-table data-table">
            <caption></caption>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th scope="row" class="govuk-table__header">First name</th>
                    <td class="govuk-table__cell">@Model.FirstName</td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="govuk-table__header">Last name</th>
                    <td class="govuk-table__cell">@Model.LastName</td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="row" class="govuk-table__header">Date of birth</th>
                    <td class="govuk-table__cell">@Model.DateOfBirth.ToString("d MMM yyyy")</td>
                </tr>
            </tbody>
        </table>

        <div class="govuk-inset-text">
            If your details are correct and we cannot find your apprenticeship, contact your employer or training provider. You can still 
            <a href="https://aan.my.apprenticeships.education.gov.uk/" rel="noopener" class="govuk-link">join the Apprenticeship Ambassador Network.</a>
        </div>

    </div>
</div>
